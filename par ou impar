#include<stdio.h>
#include<locale.h>

int main(){
    int numero, resto;
    setlocale(LC_ALL, "Portuguese");

    printf("Digite um número qualquer para descobrirmos se o número é par ou ímpar --> ");
    scanf("%d", &numero);

    if(numero % 2 == 0){
        printf("\n\nO número %d é par", numero);
    }
    else{
        printf("\n\nO número %d é ímpar", numero);
    }
}
